@model HelpDesk.Models.KitEntity

@{
    ViewData["Title"] = "Detalles del kit";
}
<div class="container">

    <h1>Detalles</h1>

    <div>
        <h4>@Model.Code</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateRegistration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateRegistration)
            </dd>            
