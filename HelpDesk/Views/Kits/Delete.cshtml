@model HelpDesk.Models.KitEntity

@{
    ViewData["Title"] = "Borrar kit";
}

<div class="container">

    <h1>Borrar</h1>

    <h3>¿Desea borrar el kit?</h3>
    <div>
        <h4>@Model.Code</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Code)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Code)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateRegistration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateRegistration)
            </dd>
        
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                Borrar
            </button>
            |
            <a asp-action="Index">Regresar a la lista</a>
        </form>
    </div>
</div>