@model HelpDesk.Models.BranchEntity

@{
    ViewData["Title"] = "Editar";
}

<div class="container">

    <h1>Editar</h1>

    <h4>@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="@ViewBag.ListCompanies" disabled>
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BranchTypeId" class="control-label"></label>
                    <select asp-for="BranchTypeId" class="form-control" asp-items="@ViewBag.ListTypeBranchs">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="BranchTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Street" class="control-label"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <input asp-for="DateRegistration" value="@Model.DateRegistration" type="hidden" />
                <input asp-for="CompanyId" value="@Model.CompanyId" type="hidden" />

                <div class="form-group">
                    <button type="submit" value="Save" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>

    @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

</div>