@model HelpDesk.Models.BranchEntity

@{
    ViewData["Title"] = "Detalles";
}

<div class="container">

    <h1>Detalles</h1>

    <div>
        <h4>@Model.Company.Name</h4>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Note)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Note)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CompanyId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Company.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BranchTypeId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeBranch.Name)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateRegistration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateRegistration)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Index">Regresar a la lista</a>
    </div>
    <hr />
    <div class="card">
        <div class="card-header">
            <h4>Lista de personas</h4>
        </div>
        <div class="card-body">
            @await Html.PartialAsync("_ListPersons", Model.ListPerson)
        </div>
        <div class="card-footer">
            @Html.ActionLink("Agregar persona","Create","Persons", new { IdBranch = Model.Id})
        </div>
    </div>
</div>
