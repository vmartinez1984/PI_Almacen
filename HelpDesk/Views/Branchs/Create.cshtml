@model HelpDesk.Models.BranchEntity

@{
    ViewData["Title"] = "Agregar";
}
<div class="container">

    <h1>Agregar</h1>

    <h4>Dependencia</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                @if (ViewBag.CompanyId == null)
                {
                    <div class="form-group">
                        <label asp-for="CompanyId" class="control-label"></label>
                        <select asp-for="CompanyId" asp-items="@ViewBag.ListCompanies" class="form-control">
                            <option value="">Seleccione</option>
                        </select>
                        <span asp-validation-for="BranchTypeId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <input asp-for="CompanyId" value="@ViewBag.CompanyId" type="hidden" />
                }
                <div class="form-group">
                    <label asp-for="BranchTypeId" class="control-label"></label>
                    <select asp-for="BranchTypeId" asp-items="@ViewBag.ListTypeBranchs" class="form-control">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="BranchTypeId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Street" class="control-label"></label>
                    <input asp-for="Street" class="form-control" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar a la lista</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
