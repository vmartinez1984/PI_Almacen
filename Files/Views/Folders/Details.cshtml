@model Files.Models.Folder

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Folder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FolderId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FolderId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateRegistration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateRegistration)
        </dd>
    </dl>
</div>

<ul>

    @foreach (var item in Model.ListArchives)
    {
        <li>
            <a href="@item.Base64">@item.Name</a> @item.DateRegistration
        </li>
    }
</ul>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
