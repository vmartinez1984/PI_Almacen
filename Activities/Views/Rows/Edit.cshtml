@model Activities.Models.RowEntity

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h1 class="text-warning">Editar</h1>

    <h4 class="text-warning">@Model.Name</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="ActivityId" class="form-control" type="hidden" />
                <input asp-for="UserId" class="form-control" type="hidden" />
                <input asp-for="DateRegistration" type="hidden" />
                <input asp-for="IsActive" type="hidden" />
                <div class="form-group">
                    <label asp-for="RowStatusId" class="control-label"></label>
                    <select asp-for="RowStatusId" class="form-control" asp-items="@ViewBag.ListRowStatus">
                        <option value="">Seleccione</option>
                    </select>
                    <span asp-validation-for="RowStatusId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateStop" class="control-label"></label>
                    <input asp-for="DateStop" class="form-control" />
                    <span asp-validation-for="DateStop" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DateRegistration" class="control-label"></label>
                    <input value="@Model.DateRegistration" disabled class="form-control" />
                    <span asp-validation-for="DateRegistration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="activities">Regresar el grupo de actividades</a>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
