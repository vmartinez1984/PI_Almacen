@model Activities.Models.RowEntity

@{
    ViewData["Title"] = "Borrar actividad";
}

<div class="container">

    <h1 class="text-danger">Borrar</h1>

    <h3 class="text-danger">¿Esta seguro de borrar esta actividad?</h3>
    <div>
        <h4>@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ActivityId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Activity.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.FullName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RowStatusId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.RowStatus.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateStop)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateStop)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateRegistration)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateRegistration)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-save"></i>
                Borrar
            </button>|
            <a asp-action="Index" asp-controller="Activities">Regresar a la lista</a>
        </form>
    </div>
</div>
