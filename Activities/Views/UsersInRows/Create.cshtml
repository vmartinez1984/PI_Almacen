@model Activities.Models.UsersInRowEntity

@{
    ViewData["Title"] = "Agregar colaborador en actividad";
}

<div class="container">

    <h1>Agregar colaborador en actividad</h1>

    <h4>Agregar colaborador</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserId" class="control-label"></label>
                    <select asp-for="UserId" class="form-control" asp-items="@ViewBag.ListUsers">
                        <option value="">Seleccione colaborador</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
             
                 <input asp-for="RowId" class="form-control" type="hidden" value="@ViewBag.IdRow" />
                    

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Agregar colaborador en actividad
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" asp-controller="Activities">Regresar a grupos de actividades</a>
    </div>
</div>

@section Scripts {
@{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
