@model Activities.Models.UsersInRowEntity

@{
    ViewData["Title"] = "Create";
}

<h1>Carnales en le jale</h1>

<h4>Agregar carnal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdUser" class="control-label"></label>
                <select asp-for="IdUser" class="form-control" asp-items="@ViewBag.ListUsers">
                    <option value="">Seleccione carnal pal jale</option>
                </select>
                <span asp-validation-for="IdUser" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRow" class="control-label"></label>
                <input asp-for="IdRow" class="form-control" type="hidden" value="@ViewBag.IdRow" />
                <span asp-validation-for="IdRow" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
